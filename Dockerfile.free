# Use Python 3.11-slim as the base image
FROM python:3.11-slim

# Set the working directory
WORKDIR /app

# Install SQLite and minimal dependencies
RUN apt-get update && apt-get install -y sqlite3 libsqlite3-dev && \
    pip install --no-cache-dir some-minimal-dependency

# Copy the application code
COPY . .

# Configure the compliance scanner execution
CMD ["python", "your_compliance_scanner_script.py"]